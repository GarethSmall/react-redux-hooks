{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
      "flowtype",
      "prettier",
      "jest",
      "jsx-a11y",
      "react",
      "import"
    ],
    "extends": ["eslint:recommended", "plugin:flowtype/recommended", "plugin:react/recommended", "prettier/react", "prettier/standard", "prettier/flowtype"],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "16.5.2",
        "flowVersion": "0.72.0"
      }
    },
    "rules": {
      "flowtype/require-valid-file-annotation": [
          2,
          "always"
      ],
      "flowtype/no-types-missing-file-annotation": 2,
      "flowtype/space-before-type-colon": [
          2,
          "always"
      ],
      "flowtype/space-after-type-colon": [
          2,
          "always"
      ],
      "strict": 0,
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "sort-keys": [1, "asc", {"caseSensitive": true, "natural": true}],
      "import/first": 1,
      "no-else-return": 1,
      "no-nested-ternary": 1,
      "no-confusing-arrow": 1,
      "no-shadow": 1
  },
  "globals": {
    "require": true,
    "process": true,
    "expect": true,
    "it": true,
    "test": true,
    "module": true,
    "__dirname": true
  }
}